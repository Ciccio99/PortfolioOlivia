main-navbar
md-content#Main_Content_Root(layout='column', layout-align='start center', ng-cloak)
    .jumbotron-concerto.become-sticky-here(layout='row', layout-align='center center')
        img(ng-src='{{case_study.case_study.marquee_image}}')

    .project-case-content(layout='column', ng-cloak)
        .panel-row.brief-panel.limit-width(layout='row', layout-align='center center', layout-wrap, ng-cloak)
            span.brief-header(flex='100') The brief
            .left-brief-section(layout='column', flex='65', flex-sm='100', flex-xs='100')
                p.main-brief {{case_study.case_study.brief}}
                p.sub-brief {{case_study.case_study.sub_brief}}            
            .right-brief-section(layout='column', flex, flex-sm='100', flex-xs='100')
                div
                    span Client
                    p {{case_study.case_study.client}} 
                div
                    span Role
                    p {{case_study.case_study.role}} 
                div
                    span Duration
                    p {{case_study.case_study.duration}} 

        .panel-row.product-shots-panel.product-shots-panel-concerto.limit-width(layout='row', layout-align='center center', ng-cloak)
            slick.slick-carousel(infinite='false', slides-to-scroll='1', slides-to-show='1', dots='true', swipe-to-slide='true', init-onload='true', data="case_study.case_study.product_images")
                div
                    <style>.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }</style><div class='embed-container'><iframe src='https://player.vimeo.com/video/149517260' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe></div>
                div(ng-repeat='prod_img in case_study.case_study.product_images')
                    img.limit-width(ng-src='{{prod_img}}', alt='Product image')

        .panel-row.solution-panel.data-visualization-panel-concerto(layout='column', layout-align='start center', ng-cloak)
            span.panel-header-titles-tight Data Visualizations
            div.data-visualizations-container-concerto.limit-width(layout='column', layout-align='start center')
                div(layout='row', layout-align='center center')
                    div.data-visualizations-info-container(layout='column')
                        span.data-visualizations-title {{case_study.case_study.data_visualizations[0].title}}
                        p.data-visualizations-body {{case_study.case_study.data_visualizations[0].body}}
                    div.concerto-gif-container
                        img(ng-src="{{case_study.case_study.data_visualizations[0].gif_1}}")
                div(layout='row', layout-align='center center')
                    div.concerto-gif-container
                        img(ng-src="{{case_study.case_study.data_visualizations[1].gif_1}}")
                    div.data-visualizations-info-container(layout='column')
                        span.data-visualizations-title {{case_study.case_study.data_visualizations[1].title}}
                        p.data-visualizations-body {{case_study.case_study.data_visualizations[1].body}}
                div(layout='row', layout-align='center center')
                    div.data-visualizations-info-container(layout='column')
                        span.data-visualizations-title {{case_study.case_study.data_visualizations[2].title}}
                        p.data-visualizations-body {{case_study.case_study.data_visualizations[2].body}}
                    div.concerto-gif-container
                        img.concerto-hover-states-limit(ng-src="{{case_study.case_study.data_visualizations[2].gif_1}}")
                div(layout='row', layout-align='center center')
                    div.concerto-gif-container
                        img(ng-src="{{case_study.case_study.data_visualizations[3].gif_1}}")
                    div.data-visualizations-info-container(layout='column')
                        span.data-visualizations-title {{case_study.case_study.data_visualizations[3].title}}
                        p.data-visualizations-body {{case_study.case_study.data_visualizations[3].body}}

        .panel-row.visual-design-panel(layout='column', layout-align='start center' ng-cloak)
            span.panel-header-titles Visual Design
            p {{case_study.case_study.visual_design_text}}
            .limit-width 
                img(ng-src='{{case_study.case_study.moodboard}}', alt='concerto Moodboard')

        .panel-row.final-designs-panel.final-designs-panel-concerto.limit-width(layout='column', layout-align='start center', ng-cloak)
            span.panel-header-titles-tight Final Designs
            div(layout='row')
                slick.slick-carousel(infinite='false', slides-to-scroll='1', dots='true', swipe-to-slide='true',init-onload='true' data="case_study.case_study.final_design_images")
                    div(ng-repeat='final_img in case_study.case_study.final_design_images')
                        img.limit-width(ng-src='{{final_img}}', alt='Final Design image')

        .panel-row.thanks-panel(layout='column', layout-align='center center', ng-cloak)
            span Thanks for scrolling!
            p Like what you see? Don't be shy and <a class='thanks-link' href="mailto:oxg7534@rit.edu?Subject=Hello%20there!" target="_top">say hello!</a><br>Or check out my other projects below:

        .panel-row.other-projects-panel(layout='row', ng-cloak)
            .previous-project-panel-concerto(ui-sref='work({case_study: "tidal"})', flex='50')
                .filter-layer(layout-fill, layout='column', layout-align='center center')
                    span Previous Project
                    p Tidal
            .next-project-panel-concerto(ui-sref='work({case_study: "sartorial"})', flex='50')
                .filter-layer(layout-fill, layout='column', layout-align='center center')
                    span Next Project
                    p Sartorial
