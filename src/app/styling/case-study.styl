@require './constants'
@require './slick'

.case-study-jumbotron
    width 100%
    
.project-case-content
    max-width 1440px
    width 100%
    
.panel-header-titles
    font 600 1.6rem font-dagny
    letter-spacing: 0.02rem
    color normal-gray
    
/*Brief section*/
.brief-panel
    padding 155px 9%
    
.brief-panel span.brief-header 
    font 600 2rem font-dagny
    color medium-gray
    margin-bottom 50px
        
.left-brief-section p.main-brief
        font 400 2.6rem font-chaparral
        line-height 40px
        margin-bottom 40px
        
.left-brief-section p.sub-brief
        font 400 1.8rem font-dagny
        color dark-gray
        line-height 30px

.right-brief-section
    padding-left 120px
.right-brief-section div
    padding-bottom 20px
.right-brief-section div span
    font 600 1.6rem font-dagny
    line-height 40px
.right-brief-section div p
    font 400 1.7rem font-dagny

/* Solution section*/
.solution-panel
    padding 130px 8%
.solution-panel p.main-solution
    font 400 2.6rem font-chaparral
    text-align center
    line-height 40px
    margin-top 70px
    padding 0 14%
    
/* Wireframes panel*/
.wireframes-panel
    background-color wireframe-bg-color
    padding 120px 0 80px 0
.wireframes-panel span
        margin-bottom 55px 

/* visual designs sections */
.visual-design-panel
    padding 120px 116px
.visual-design-panel p
        font 400 2.7rem font-chaparral
        text-align center
        line-height 40px
        margin-top 70px
        padding 0 15%
.visual-design-panel img
        margin-top 30px

/* Final Designs panel*/
.final-designs-panel
    padding 20px 0 50px 0
    box-shadow 0 5px 5px -6px light-gray
    z-index 1
.final-designs-panel span
        margin-bottom 40px
    
/* Thanks panel*/
.thanks-panel
    padding 75px 20px
    background-color light-gray-bg-color
.thanks-panel span
        font 600 3.2rem font-dagny
.thanks-panel p
        color medium-gray
        margin-top 40px
        text-align center
        font 400 2.4rem font-chaparral
        line-height 28px
.thanks-panel p .thanks-link
            color link-teal
            font 400 2.2rem font-chaparral

/* other projects panel*/
.other-projects-panel
    color #fafafa
.other-projects-panel div
        height 240px
        cursor pointer
.other-projects-panel .filter-layer
        background-color rgba(0, 0, 0, 0.30)
.other-projects-panel span
        font 400 2.7rem font-chaparral
.other-projects-panel p
        margin-top 5px
        font 600 3rem font-dagny

/* Sartorial Specific */
.jumbotron-sartorial
    background-color sartorial-jumbo-bg-color
    height 685px
    width 100%

.product-shots-panel-sartorial
    {light-pagination}

.wireframes-panel-sartorial
    {light-pagination}

.final-designs-panel-sartorial
    {dark-pagination}

.previous-project-panel-sartorial
        background url('../assets/Misfit/Marquee/Misfit.png') center no-repeat
        background-size cover
        
.next-project-panel-sartorial
        background url('../assets/Tidal/Marquee/Tidal_Marquee.png') center no-repeat
        background-size cover

/* Tidal Specific */
.jumbotron-tidal
    width 100%
.sub-solutions-tidal
    width 100%
    margin-top 100px
.sub-solutions-tidal div
        padding 2%
.sub-solutions-tidal span
        font 500 2.5rem font-dagny
.sub-solutions-tidal p 
        margin-top 10px
        font 400 1.8rem font-dagny
        line-height 25px
        color light-gray

.visual-design-panel-tidal
    background-color light-gray-bg-color
    
.final-designs-panel-tidal
    background-color light-gray-bg-color !important
    {dark-pagination}
    
.thanks-panel-tidal
    background-color white

.previous-project-panel-tidal
        background url('../assets/Sartorial/Marquee/Letter.png') center center no-repeat
        background-color sartorial-jumbo-bg-color
        background-size 28%
        
.next-project-panel-tidal
        background url('../assets/Misfit/Marquee/Misfit.png') center no-repeat
        background-size cover

/* Misfit Specific */
.jumbotron-misfit
    width 100%
    
.final-designs-panel-misfit
    padding 130px 0
    background-color light-gray-bg-color !important
    {dark-pagination}

.thanks-panel-misfit
    background-color white

.previous-project-panel-misfit
        background url('../assets/Tidal/Marquee/Tidal_Marquee.png') center center no-repeat
        background-size cover

.next-project-panel-misfit
        background url('../assets/Sartorial/Marquee/Letter.png') center center no-repeat
        background-color sartorial-jumbo-bg-color
        background-size 28%

