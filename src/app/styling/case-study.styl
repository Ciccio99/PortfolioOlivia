@require './constants'
@require './slick'

.case-study-jumbotron
    width 100%
    
.project-case-content
    width 100%

.limit-width
    width 100%
    max-width 1440px
    margin auto
    
.limit-width-not-centered
    max-width 1440px
    
.panel-header-titles
    font 600 1.8rem font-dagny
    letter-spacing: -0.01em
    line-height 40px
    color light-gray
    text-align center
    
.panel-header-titles-tight
    font 600 1.8rem font-dagny
    color light-gray
    letter-spacing -0.01em
    text-align center   

.bottom-panel-shadow
    box-shadow 0 10px 10px -10px medium-gray
    z-index 1
    
/*Brief section*/
.brief-panel
    padding 177px 9% 195px 9%
    & span.brief-header 
        font 600 1.8rem font-dagny
        color light-gray
        letter-spacing -0.01em
        margin-bottom 80px
        
.left-brief-section
    & p.main-brief
        font 400 30px font-chaparral
        line-height 4.25rem
        letter-spacing -0.02em
        margin-bottom 46px
        color darker-gray
    & p.sub-brief
        font 400 1.7rem font-dagny
        color #737373
        line-height 3.25rem

.right-brief-section
    padding-left 116px
    & div
        padding-bottom 20px
    & div span
        font 600 1.7rem font-dagny
        line-height 40px
        letter-spacing -0.01em
        color #4c4c4c
    & div p
        font 400 1.7rem font-dagny
        letter-spacing -0.01em
        color #4c4c4c

/* Solution section*/
.solution-panel
    padding 118px 0 122px 0
    & p.main-solution
        color darker-gray
        font 400 2.5rem font-chaparral
        text-align center
        letter-spacing -0.02em
        line-height 40px
        margin-top 60px
        max-width 932px
    
/* Wireframes panel*/
.wireframes-panel
    background-color wireframe-bg-color
    padding 117px 0 80px 0
    & span.panel-header-titles
        margin-bottom 60px 
        color white-gray
    & p.wireframes-opener
        font 400 2.5rem font-chaparral
        color #8a969f
        text-align: center
        letter-spacing -0.02em
        line-height 40px
        padding 0 15%
        margin-bottom 105px
        
        
/* visual designs sections */
.visual-design-panel
    padding 117px 8% 136px 8%
    & span
        color #b7b7b7
    & p
        font 400 2.5rem font-chaparral
        color darker-gray
        letter-spacing -0.02em
        text-align center
        line-height 40px
        margin-top 60px
        margin-bottom 78px
        max-width 932px
    & img
        width 100%
        
/* Final Designs panel*/
.final-designs-panel
    padding-bottom 80px
    & span
        font 600 1.8rem font-dagny
        color light-gray
        letter-spacing -0.01em
        text-align center
        margin-bottom 50px
    
/* Thanks panel*/
.thanks-panel
    padding 103px 0 94px 0
    background-color light-gray-bg-color
    & span
        font 600 3.4rem font-soleil
        color #333333
        letter-spacing -0.03em
        line-height 41px
        text-align center
        margin-bottom 44px
    & p
        color #8c8c8c
        text-align center
        font 400 2.5rem font-chaparral
        line-height 40px
        letter-spacing -0.02em
    & p .thanks-link
            color link-teal
            font 400 2.5rem font-chaparral
            text-align center
            line-height 40px
            letter-spacing -0.02em

/* other projects panel*/
.other-projects-panel
    & div
        height 270px
        cursor pointer
    & .filter-layer
        transition all 0.3s ease
    & .filter-layer:hover
        background-color rgba(255, 255, 255, 0.25)
    & span
        font 400 2.6rem font-chaparral
        color #efefef
        letter-spacing -0.02em
        line-height 42px
        text-align center
    & p
        font 600 3.4rem font-soleil
        letter-spacing -0.03em
        line-height 41px
        color #fafafa

/* Sartorial Specific */
.jumbotron-sartorial
    background-color sartorial-jumbo-bg-color
    height 685px
    width 100%

.product-shots-panel-sartorial
    {light-pagination}
    & img
        width 100%

.wireframes-panel-sartorial
    {light-pagination}
    & span.panel-header-titles
        color #fcfeff

.final-designs-panel-sartorial
    {dark-pagination}
    & img
        max-height 636px
        
.deck-panel-sartorial
    padding 118px 0 122px 0
    background-color #dfe6eb
    box-shadow 0 10px 10px -10px medium-gray
    z-index 1
    & span
        color #fcfeff
    & p
        font 400 2.5rem font-chaparral
        color #8a969f
        text-align: center
        letter-spacing -0.02em
        line-height 40px
        padding 0 15%  
        margin-top 63px
        margin-bottom 40px
    & a.sartorial-deck-btn-link
        & div.sartorial-deck-btn
            text-align center
            width 220px
            height 60px
            background-color #fafafa
            color #8a969f
            
            border-radius 40px
            font 600 1.8rem font-dagny
            letter-spacing -0.02em
            transition all 0.25s ease
            &:hover
                background-color #667682
                color #f5f5f5
                

.previous-project-panel-sartorial
    background-color #f7a04f
        
.next-project-panel-sartorial
    background-color #e98b6a        

/* Tidal Specific */
.jumbotron-tidal
    width 100%
    background linear-gradient(to bottom, #1d2b33, #02232e)
    height 685px
            
.sub-solutions-tidal
    width 100%
    margin-top 155px
    padding 0 5%
    & div.tidal-sub-solution-column
        padding 0 2%
    & div.tidal-glyph-container
        height 176px
        margin-bottom 56px
        & img
            max-width 100%
            max-height 100%
            margin auto
    & span
        font 600 2.6rem font-soleil
        letter-spacing -0.03em
        line-height 36px
        color #595959
    & p 
        margin-top 20px
        font 400 1.8rem font-dagny
        letter-spacing: -0.01em
        line-height 32.5px
        color #737373
    
        
.tidal-wireframes-panel
    {dark-pagination}
    background-color #ebebeb
    & span.panel-header-titles-tight
        margin-bottom 50px
    & p.wireframes-opener
        font 400 2.5rem font-chaparral
        color #edf0f2
        line-height 40px
        letter-spacing -0.02em
        color dark-gray
    & div.tidal-wireframe-inner-panel
        padding 0 6%
        & img.Tidal-wireframe-image
            max-width 90%
            max-height 675px
            margin auto
        & div.tidal-wireframe-breakdown-container
            margin-top 88px
            max-width 460px
            & div.tidal-wireframe-main-info
                margin-bottom 15px
                & span.wireframe-main-info-number
                    font 400 20px font-soleil
                    color #383838
                    letter-spacing -0.02em
                    line-height 100%
                & span.wireframe-main-info-title
                    font 600 3.6rem font-soleil
                    color #383838
                    letter-spacing -0.03em
                    line-height 100%
                & p.wireframe-main-info-body
                    font 400 1.7rem font-dagny
                    color #989695
                    margin-top 25px
                    line-height 28px
            & div.wireframe-explanations
                & span.wireframe-explanations-number
                    font 400 1.6rem font-soleil
                    color tidal-blue
                    margin-top 25px
                    line-height 100%
                & span.wireframe-explanations-title
                    font 600 2rem font-soleil
                    color tidal-blue
                    letter-spacing -0.01em
                    line-height 100%
                    padding-bottom 14px
                & p.wireframe-explanations-body
                    font 400 1.8rem font-dagny
                    color #949291
                    line-height 30px

.final-designs-panel-tidal
    & div.wireframe-slick
        & img
            max-width 330px   

.visual-design-panel-tidal
    background-color light-gray-bg-color
    
.final-designs-panel-tidal
    background-color light-gray-bg-color !important
    {dark-pagination}

.deck-panel-tidal
    padding 118px 0 122px 0
    background-color #dadce0
    & span
        color #fcfeff
    & p
        font 400 2.5rem font-chaparral
        color #878d94
        text-align: center
        letter-spacing -0.02em
        line-height 40px
        padding 0 15%  
        margin-top 63px
        margin-bottom 40px
    & a.tidal-deck-btn-link
        & div.tidal-deck-btn
            text-align center
            width 220px
            height 60px
            background-color #fafafa
            color #8a969f
            
            border-radius 40px
            font 600 1.8rem font-dagny
            letter-spacing -0.02em
            transition all 0.25s ease
            &:hover
                background-color #1e434f
                color #f5f5f5
    
.thanks-panel-tidal
    background-color white

.previous-project-panel-tidal
    background-color #728a83
        
.next-project-panel-tidal
    background-color #f7a04f

/* Misfit Specific */
.jumbotron-misfit
    width 100%
    & img
        width 100%
    
.final-designs-panel-misfit
    padding 130px 0
    background-color light-gray-bg-color !important
    {dark-pagination}

.wireframe-slick-misfit
    padding 0 40px

.thanks-panel-misfit
    background-color white

.previous-project-panel-misfit
    background-color #b8c9da

.next-project-panel-misfit
    background-color #728a83
    
