@require './constants'

.jumbotron
	background url('../../assets/images/bw.jpg') no-repeat
	background-size cover
	height 685px
	width 100%

.project-cases
	max-width 1440px
	width 100%
	padding-top 120px
	
// Shared case study styling elements

.project-cases-item
	position relative
	height 1000px
	&:not(:first-child)
		margin-top 80px
		
.project-case-item-info-panel
	position relative
	padding-top 150px

.project-case-main-header 
	font 600 4.3rem font-dagny
	margin-top 10px
		
.project-case-sub-header
	font 600 1.5rem font-dagny

.project-case-info
	& p
		font 400 2.1rem font-chaparral
		line-height 32px
		letter-spacing: 0.1rem
		margin-top 50px
	& a
		font 600 1.7rem font-dagny
		letter-spacing 0.05rem
		margin-top 30px
		text-decoration none
		color normal-gray
		
// Sliding animation
.slide-animation-to-left {
	-moz- transform translate3d(30%, 0px, 0px);
 	-webkit- transform translate3d(30%, 0px, 0px);
 	-o-transform translate(30%, 0px);
 	-ms-transform translate(30%, 0px);
  	transform translate3d(30%, 0px, 0px);
  	transition 0 0 all ease
}

.slide-animation-to-right {
	-moz- transform translate3d(-30%, 0px, 0px);
 	-webkit- transform translate3d(-30%, 0px, 0px);
 	-o-transform translate(-30%, 0px);
 	-ms-transform translate(-30%, 0px);
  	transform translate3d(-30%, 0px, 0px);
  	transition 0 0 all ease
}

