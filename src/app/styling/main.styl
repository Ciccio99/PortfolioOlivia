@require './constants'

.jumbotron
	background url('../../assets/images/bw.jpg') no-repeat
	background-size cover
	height 685px
	width 100%

.project-cases
	max-width 1440px
	width 100%
	padding-top 120px
	
/* Shared case study styling elements*/

.project-cases-item
	position relative
	height 1000px
.project-cases-item:not(:first-child)
		margin-top 80px
		
.project-case-item-info-panel
	position relative
	padding-top 150px

.project-case-main-header 
	font 600 5rem font-soleil
	margin-top 15px
		
.project-case-sub-header
	font 600 1.5rem font-dagny

.project-case-info p
	font 400 2.1rem font-chaparral
	line-height 32px
	letter-spacing: 0.1rem
	margin-top 50px
		
.project-case-info a
	font 600 1.7rem font-soleil
	letter-spacing 0.05rem
	margin-top 40px
	text-decoration none
	color normal-gray

/* Case study specific styling elements
