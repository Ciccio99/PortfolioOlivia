.slick-carousel
    width 100%

.product-shots-panel img
    width 100%

.final-designs-panel .slick-dots
    bottom -40px

//
// Wireframe carousel styling
//

.wireframes-panel 
    & .slick-dots
        bottom -70px
        
.wireframes-panel-sartorial
    & span.wireframe-asset-title
        display block
        text-align center
        font 600 3.2rem font-soleil
        margin-bottom 26px
        color #ffffff
    & img
        margin auto
        margin-bottom 104px
    & div.wireframe-asset-breakdowns
        max-width 80%
        margin auto
        & div
            padding 0 1%
        & span
            font 600 2rem font-soleil
            color dull-gold
            line-height 27.5px
            letter-spacing -0.01em
            margin-bottom 18px
        & p
            font 400 1.8rem font-dagny
            color #9da0a3
            line-height 30px
            letter-spacing -0.01em

.slick-next
    background url('../assets/Arrows/Next_Arrow.png') right center no-repeat !important
    right 35px
    top 38%
    width 50px
    height 25%
    
.slick-next:hover
    cursor pointer
    
.slick-next::before
    content none !important

.slick-prev
    background url('../assets/Arrows/Previous_Arrow.png') left center no-repeat !important
    left 35px
    top 38%
    width 50px
    height 25%
    
.slick-prev:hover
    cursor pointer
.slick-prev:before
    content none !important

.slick-disabled
    cursor default !important

.slick-slider
    margin-bottom 0px

.slick-dots
    bottom 0px
    
.slick-dots
    & li
        margin 0
    
light-pagination = 
    .slick-dots li button
        background url('../assets/Pagination/Pagination_Light.png') center center no-repeat !important
        opacity 1
    .slick-dots li button::before
        color transparent
            
    .slick-dots li.slick-active button:before 
        background url('../assets/Pagination/Pagination_Selected_Light.png') center center no-repeat !important
        opacity 1
        color transparent !important

dark-pagination = 
    .slick-dots li button
        background url('../assets/Pagination/Pagination_Dark.png') center center no-repeat !important
        opacity 1
    .slick-dots li button::before
        color transparent
    .slick-dots li.slick-active button:before 
        background url('../assets/Pagination/Pagination_Selected_Dark.png') center center no-repeat !important
        opacity 1
        color transparent !important
