.jumbotron-sartorial
    background-color #cdd6de
    height 685px
    width 100%

.project-case-content
    max-width 1440px
    width 100%
    
.panel-header-titles
    font 600 1.5rem font-dagny
    letter-spacing: 0.02rem
    color light-gray
    
// Brief section
.brief-panel
    padding 155px 9%
    & span.brief-header 
        font 600 2rem font-dagny
        color light-gray
        margin-bottom 50px
        
.left-brief-section
    & p.main-brief
        font 500 2.5rem font-kepler
        line-height 40px
        margin-bottom 40px
    & p.sub-brief
        font 500 1.9rem font-dagny
        color medium-gray
        line-height 30px


.right-brief-section
    padding-left 120px
    & div
        padding-bottom 20px
        & span
            font 600 1.6rem font-dagny
            line-height 40px
        & p
            font 400 1.7rem font-dagny


    
// Solution section
.solution-panel
    padding 130px 18%
    & p
        font 300 2.5rem font-kepler
        text-align center
        line-height 40px
        margin-top 70px
        
// Wireframes panel
.wireframes-panel
    background-color wireframe-bg-color
    padding 120px 0 80px 0
    & span
        margin-bottom 55px 

// visual designs sections
.visual-design-panel
    padding 120px 116px
    & p
        font 300 2.5rem font-kepler
        text-align center
        line-height 40px
        margin-top 70px
        padding 0 18%
    & img
        margin-top 30px

// Final Designs panel
.final-designs-panel
    padding 20px 0 50px 0
    box-shadow 0 5px 5px -6px light-gray
    z-index 1
    & span
        margin-bottom 40px
    
// Thanks panel
.thanks-panel
    padding 75px 20px
    background-color thanks-bg-color
    & span
        font 600 3rem font-dagny
    & p
        color medium-gray
        margin-top 40px
        text-align center
        font 400 2.2rem font-kepler
        line-height 28px
        & .thanks-link
            color link-teal
            font 400 2.2rem font-kepler

// other projects panel
.other-projects-panel
    color #fafafa
    & div
        height 240px
        cursor pointer
    & .filter-layer
        background-color rgba(0, 0, 0, 0.40)
    & .previous-project-panel
        background url('../assets/letters/M.png') center no-repeat
    & .next-project-panel
        background url('../assets/letters/T.png') center no-repeat
    & span
        font 400 2.7rem font-kepler
    & p
        margin-top 20px
        font 600 3rem font-dagny
