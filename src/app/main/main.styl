.jumbotron
	background url('../../assets/images/bw.jpg') no-repeat
	background-size cover
	height 690px
	width 100%

.project-cases
	max-width 1440px
	width 100%
	padding-top 120px
	
// Shared case study styling elements

.project-cases-item
	position relative
	height 1000px
	&:not(:first-child)
		margin-top 80px
		
.project-case-item-info-panel
	position relative
	padding-top 150px

.project-case-main-header 
	font 500 4.3rem 'Helvetica Neue' Arial
	margin-top 10px
		
.project-case-sub-header
	font 500 1.4rem 'Helvetica Neue' Arial

.project-case-info
	& p
		font 400 1.8rem 'Helvetica Neue' Arial
		line-height 32px
		letter-spacing: 0.1rem
		margin-top 50px
	& a
		font 600 1.6rem 'Helvetica Neue' Arial
		letter-spacing 0.1rem
		margin-top 20px

